{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "dataset_list_name": {
          "description": "dataset_list over which the filters are calculated",
          "type": "string"
        },
    "filters": {
      "type": "object",
      "properties": {        
        "subject_filter": {
          "description": "Filters applied to each of the datasets in the dataset_list and when combined will provide a list of subjects",
          "type": "object",
          "properties": {
            "children": {
              "type": "array",
              "items": {
                "oneOf": [
                  { "$ref": "#/definitions/set_operation_intersect_union" },
                  { "$ref": "#/definitions/set_operation_complement" },
                  { "$ref": "#/definitions/row_operation_and_or" },
                  { "$ref": "#/definitions/row_operation_not" },
                  { "$ref": "#/definitions/filter_date" },
                  { "$ref": "#/definitions/filter_subset" },
                  { "$ref": "#/definitions/filter_range" }
                ]
              },
              "maxItems": 1
            }
          },
          "required": ["children"]
        },
        "datasets_filter": {
          "description": "Filters applied to each of the datasets separately",
          "type": "object",
          "properties": {
            "children": {
              "type": "array",
              "items": {
                "oneOf": [{ "$ref": "#/definitions/dataset" }]
              }
            }
          },
          "required": ["children"]
        }
      }
    }
  },
  "required": ["filters", "dataset_list_name"],
  "additionalProperties": false,
  "definitions": {
    "set_operation_intersect_union": {
      "type": "object",
      "properties": {
        "kind": { "type": "string", "enum": ["row_operation"] },
        "operation": { "type": "string", "enum": ["intersect", "union"] },
            "children": {
              "type": "array",
              "items": {
                "oneOf": [
                  { "$ref": "#/definitions/set_operation_intersect_union" },
                  { "$ref": "#/definitions/set_operation_complement" },
                  { "$ref": "#/definitions/row_operation_and_or" },
                  { "$ref": "#/definitions/row_operation_not" },
                  { "$ref": "#/definitions/filter_date" },
                  { "$ref": "#/definitions/filter_subset" },
                  { "$ref": "#/definitions/filter_range" }
                ]
              },
              "minItems": 1
            }
      },
      "required": ["kind", "operation", "children"]
    },
    "set_operation_complement": {
      "type": "object",
      "properties": {
        "kind": { "type": "string", "enum": ["row_operation"] },
        "operation": { "type": "string", "enum": ["complement"] },
            "children": {
              "type": "array",
              "items": {
                "oneOf": [
                  { "$ref": "#/definitions/set_operation_intersect_union" },
                  { "$ref": "#/definitions/set_operation_complement" },
                  { "$ref": "#/definitions/row_operation_and_or" },
                  { "$ref": "#/definitions/row_operation_not" },
                  { "$ref": "#/definitions/filter_date" },
                  { "$ref": "#/definitions/filter_subset" },
                  { "$ref": "#/definitions/filter_range" }
                ]
              },
              "minItems": 1,
              "maxItems": 1
            }
      },
      "required": ["kind", "operation", "children"]
    },    
    "dataset": {
      "type": "object",
      "properties": {
        "kind": {
          "type" : "string",
          "enum": ["dataset"]
        },        
        "name": { "type": "string" },
        "children": {
          "type": "array",
          "description": "Must contain filter operations or filters",
          "items": {
            "oneOf": [              
              { "$ref": "#/definitions/row_operation_and_or" },
              { "$ref": "#/definitions/row_operation_not" },
              { "$ref": "#/definitions/filter_date" },
              { "$ref": "#/definitions/filter_subset" },
              { "$ref": "#/definitions/filter_range" }
            ]
          },
          "maxItems": 1
        }
      },
      "required": ["name", "children"]
    },
    "row_operation_and_or": {
      "type": "object",
      "properties": {
        "kind": { "type": "string", "enum": ["row_operation"] },
        "operation": { "type": "string", "enum": ["and", "or"] },
            "children": {
              "type": "array",
              "items": {
                "oneOf": [
                  { "$ref": "#/definitions/row_operation_and_or" },
                  { "$ref": "#/definitions/row_operation_not" },
                  { "$ref": "#/definitions/filter_date" },
                  { "$ref": "#/definitions/filter_subset" },
                  { "$ref": "#/definitions/filter_range" }
                ]
              },
              "minItems": 1
            }
      },
      "required": ["kind", "operation", "children"]
    },
    "row_operation_not": {
      "type": "object",
      "properties": {
        "kind": { "type": "string", "enum": ["row_operation"] },
        "operation": { "type": "string", "enum": ["not"] },
            "children": {
              "type": "array",
              "items": {
                "oneOf": [
                  { "$ref": "#/definitions/row_operation_and_or" },
                  { "$ref": "#/definitions/row_operation_not" },
                  { "$ref": "#/definitions/filter_date" },
                  { "$ref": "#/definitions/filter_subset" },
                  { "$ref": "#/definitions/filter_range" }
                ]
              },
              "minItems": 1,
              "maxItems": 1
            }
      },
      "required": ["kind", "operation", "children"]
    },
    "filter_subset": {
      "type": "object",
      "properties": {
        "kind": { "type": "string", "enum": ["filter"] },
        "dataset": { "type": "string" },
        "variable": { "type": "string" },
        "include_NA": { "type": "boolean" },
        "operation": { "type": "string", "enum": ["select_subset"] },
            "values": {
              "type": "array",
              "items": { "type": "string" }
            }
      },
      "required": ["kind", "values", "include_NA", "variable", "dataset"]
    },
    "filter_range": {
      "type": "object",
      "properties": {
        "kind": { "type": "string", "enum": ["filter"] },
        "dataset": { "type": "string" },
        "variable": { "type": "string" },
        "include_NA": { "type": "boolean" },
        "operation": { "type": "string", "enum": ["select_range"] },            
            "max": {
              "oneOf": [
                { "type": "number" },
                { "type": "string", "enum": ["Inf", "-Inf", "NA", "NaN"] }
              ]
            },
            "min": {
              "oneOf": [
                { "type": "number" },
                { "type": "string", "enum": ["Inf", "-Inf", "NA", "NaN"] }
              ]
            }
      },
      "required": ["kind", "min", "max", "include_NA", "variable", "dataset"]
    },
    "filter_date": {
      "type": "object",
      "properties": {
        "kind": { "type": "string", "enum": ["filter"] },
        "dataset": { "type": "string" },
        "variable": { "type": "string" },
        "include_NA": { "type": "boolean" },
        "operation": { "type": "string", "enum": ["select_date"] },
        "max": {
          "oneOf": [
                { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" },
                { "type": "string", "enum": ["Inf", "-Inf", "NA"] }
              ]
        },
        "min": {
          "oneOf": [
                { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" },
                { "type": "string", "enum": ["Inf", "-Inf", "NA"] }
              ]
        }
      },
      "required": ["kind", "min", "max", "include_NA", "variable", "dataset"]
    }
  }
}

